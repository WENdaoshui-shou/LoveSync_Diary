# 阿里云 OSS 配置
ALIYUN_OSS_ACCESS_KEY_ID=your_access_key_id
ALIYUN_OSS_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_OSS_BUCKET_NAME=your_bucket_name
ALIYUN_OSS_ENDPOINT=oss-cn-xxxxx.aliyuncs.com

# Redis连接配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# 缓存数据库配置
REDIS_DB_DEFAULT=0        # 默认缓存数据库
REDIS_DB_USER_SESSIONS=0  # 用户会话缓存数据库
REDIS_DB_MASTER=1         # 用户数据社区等主要模块的数据库
REDIS_DB_MALL_CACHE=2     # 商城相关的缓存数据库

# 商城相关缓存使用商城缓存数据库
REDIS_DB_HOT_PRODUCTS=${REDIS_DB_MALL_CACHE}   # 热卖商品缓存数据库
REDIS_DB_PRODUCT_CACHE=${REDIS_DB_MALL_CACHE}  # 商品详情缓存数据库

# 热卖商品缓存过期时间（秒）
HOT_PRODUCTS_CACHE_TTL=3600        # 正常数据缓存1小时
HOT_PRODUCTS_EMPTY_TTL=600        # 空数据缓存10分钟