<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" width="64" height="64">
    <!-- 定义渐变 -->
    <defs>
        <linearGradient id="loveGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#FF6B8B" />
            <stop offset="100%" stop-color="#722ED1" />
        </linearGradient>
    </defs>
    
    <!-- 圆形背景 - 整体缩小 -->
    <circle cx="32" cy="32" r="32" fill="url(#loveGradient)" />
    
    <!-- 对称的爱心图标 - 相应缩小尺寸 -->
    <path d="M32,20 
             C25,15 18,18 18,26 
             C18,32 22,36 32,45 
             C42,36 46,32 46,26 
             C46,18 39,15 32,20 Z" 
          fill="white" />
    
    <!-- 脉冲动画效果 - 幅度相应减小 -->
    <animate attributeName="r" from="32" to="33" dur="2s" repeatCount="indefinite" />
</svg>    